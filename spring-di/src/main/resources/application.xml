<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-4.1.xsd
    http://www.springframework.org/schema/context
    http://www.springframework.org/schema/context/spring-context-4.1.xsd">

    <context:property-placeholder location="classpath:/application.properties" />

    <context:component-scan base-package="com.apress.spring_quick.di" />

    <!-- The following is how you would declare a bean in XML; however, it's unnecessary since we use component-scan
    <bean class="com.apress.spring_quick.di.MyBean" name="myBean" lazy-init="true" />
    -->

</beans>
